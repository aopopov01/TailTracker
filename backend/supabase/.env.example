# TailTracker Supabase Environment Configuration
# Copy this to .env.local and .env.production with your actual values

# Supabase Configuration
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_DB_PASSWORD=your-db-password

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
DB_CONNECTION_POOLING=true
DB_POOL_SIZE=20
DB_MAX_CONNECTIONS=100

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_WEBHOOK_ENDPOINT=https://your-project-id.supabase.co/functions/v1/stripe-webhook
PAYMENT_CURRENCY=eur
PAYMENT_PRICE_PREMIUM_MONTHLY=price_your_premium_price_id

# Authentication Configuration
NEXTAUTH_URL=https://tailtracker.app
NEXTAUTH_SECRET=your-nextauth-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=noreply@tailtracker.app

# SMS Configuration (for lost pet alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
IMAGE_RESIZE_QUALITY=80
THUMBNAIL_SIZE=300x300

# App Configuration
APP_NAME=TailTracker
APP_URL=https://tailtracker.app
SUPPORT_EMAIL=support@tailtracker.app
PRIVACY_POLICY_URL=https://tailtracker.app/privacy
TERMS_OF_SERVICE_URL=https://tailtracker.app/terms

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_LOST_PET_ALERTS=true
ENABLE_VACCINATION_REMINDERS=true
ENABLE_FAMILY_SHARING=true
ENABLE_ANALYTICS=true

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_PER_MINUTE=60

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=your-sentry-dsn
MIXPANEL_TOKEN=your-mixpanel-token

# Environment
NODE_ENV=production
VERCEL_ENV=production