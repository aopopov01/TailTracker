{
  "name": "tailtracker",
  "version": "2.0.0",
  "private": true,
  "description": "TailTracker - Cross-Platform Pet Management",
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@tailtracker/web",
    "dev:admin": "turbo run dev --filter=@tailtracker/admin",
    "dev:mobile": "turbo run dev --filter=@tailtracker/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@tailtracker/web",
    "build:admin": "turbo run build --filter=@tailtracker/admin",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev": "./docker-dev.sh up",
    "docker:stop": "./docker-dev.sh down",
    "docker:logs": "./docker-dev.sh logs",
    "docker:build": "./docker-dev.sh build",
    "docker:clean": "./docker-dev.sh clean",
    "docker:prod": "./docker-dev.sh prod"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "react-hot-toast": "^2.6.0"
  }
}