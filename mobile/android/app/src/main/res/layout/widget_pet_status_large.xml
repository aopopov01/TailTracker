<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with pet selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widget_prev_pet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous pet"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            android:id="@+id/widget_pet_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 of 3"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/widget_next_pet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next pet"
            android:src="@drawable/ic_chevron_right" />

    </LinearLayout>

    <!-- Main content -->
    <LinearLayout
        android:id="@+id/widget_pet_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Pet image -->
        <ImageView
            android:id="@+id/widget_pet_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Pet photo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pet_placeholder" />

        <!-- Pet info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pet name -->
            <TextView
                android:id="@+id/widget_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Pet Name"
                android:textColor="@color/widget_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Location status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/widget_location_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_location_safe" />

                <TextView
                    android:id="@+id/widget_location_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safe Zone"
                    android:textColor="@color/status_safe"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Health status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_health" />

                <TextView
                    android:id="@+id/widget_health_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excellent"
                    android:textColor="@color/status_excellent"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Activity level -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_activity" />

                <TextView
                    android:id="@+id/widget_activity_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Steps today -->
        <TextView
            android:id="@+id/widget_steps_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="2,543 steps today"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <!-- Last seen -->
        <TextView
            android:id="@+id/widget_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Last seen: 5m ago"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/widget_refresh_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_background"
                android:contentDescription="Refresh"
                android:padding="6dp"
                android:src="@drawable/ic_refresh" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/widget_emergency_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/emergency_button_background"
                android:contentDescription="Emergency"
                android:padding="6dp"
                android:src="@drawable/ic_emergency" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>