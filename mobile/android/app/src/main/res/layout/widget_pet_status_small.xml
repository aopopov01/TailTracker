<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Pet image -->
    <ImageView
        android:id="@+id/widget_pet_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Pet photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_pet_placeholder" />

    <!-- Pet name -->
    <TextView
        android:id="@+id/widget_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Pet"
        android:textColor="@color/widget_text_primary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Status -->
    <TextView
        android:id="@+id/widget_location_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safe"
        android:textColor="@color/status_safe"
        android:textSize="10sp" />

    <!-- Emergency button -->
    <ImageButton
        android:id="@+id/widget_emergency_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/emergency_button_background"
        android:contentDescription="Emergency"
        android:padding="3dp"
        android:src="@drawable/ic_emergency" />

    <!-- Hidden elements for compatibility -->
    <TextView
        android:id="@+id/widget_pet_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widget_prev_pet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widget_next_pet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widget_refresh_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/widget_location_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_health_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_activity_level"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_steps_today"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_last_seen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>