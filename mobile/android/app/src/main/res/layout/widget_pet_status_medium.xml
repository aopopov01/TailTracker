<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Pet image -->
    <ImageView
        android:id="@+id/widget_pet_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Pet photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_pet_placeholder" />

    <!-- Pet info -->
    <LinearLayout
        android:id="@+id/widget_pet_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Pet name -->
        <TextView
            android:id="@+id/widget_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Pet Name"
            android:textColor="@color/widget_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Location status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_location_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/ic_location_safe" />

            <TextView
                android:id="@+id/widget_location_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Zone"
                android:textColor="@color/status_safe"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Health status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/ic_health" />

            <TextView
                android:id="@+id/widget_health_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textColor="@color/status_excellent"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_background"
            android:contentDescription="Refresh"
            android:padding="4dp"
            android:src="@drawable/ic_refresh" />

        <ImageButton
            android:id="@+id/widget_emergency_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/emergency_button_background"
            android:contentDescription="Emergency"
            android:padding="4dp"
            android:src="@drawable/ic_emergency" />

    </LinearLayout>

    <!-- Hidden elements for compatibility -->
    <TextView
        android:id="@+id/widget_pet_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widget_prev_pet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widget_next_pet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_activity_level"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_steps_today"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_last_seen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>