<?xml version="1.0" encoding="utf-8"?>
<!-- Production Network Security Configuration -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production domains only -->
        <domain includeSubdomains="true">api.tailtracker.com</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebaseio.com</domain>
        
        <!-- Certificate pinning for production (configure before release) -->
        <!-- Uncomment when you have actual certificate hashes:
        <pin-set expiration="2026-12-31">
            <pin digest="SHA-256">ADD_YOUR_API_SERVER_CERT_HASH_HERE</pin>
            <pin digest="SHA-256">ADD_YOUR_BACKUP_CERT_HASH_HERE</pin>
        </pin-set>
        -->
    </domain-config>
    
    <!-- Base config for all other connections - strict security -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Only trust system certificates in production -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>