<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production domains -->
        <domain includeSubdomains="true">api.tailtracker.com</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebaseio.com</domain>
        
        <!-- Certificate pinning configuration 
             IMPORTANT: Replace with actual certificate hashes before production release
             Generate hashes using: openssl x509 -in certificate.crt -pubkey -noout | openssl pkey -pubin -outform der | openssl dgst -sha256 -binary | openssl enc -base64
        -->
        <!-- Uncomment and configure certificate pinning for production:
        <pin-set expiration="2026-12-31">
            <pin digest="SHA-256">ADD_YOUR_API_SERVER_CERT_HASH_HERE</pin>
            <pin digest="SHA-256">ADD_YOUR_BACKUP_CERT_HASH_HERE</pin>
        </pin-set>
        -->
    </domain-config>
    
    <!-- Allow cleartext traffic only for development/debugging -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.0.0/8</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>
        <domain includeSubdomains="true">172.16.0.0/12</domain>
        <domain includeSubdomains="true">api-dev.tailtracker.com</domain>
        <domain includeSubdomains="true">api-staging.tailtracker.com</domain>
    </domain-config>
    
    <!-- Debug overrides (only in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system"/>
            <!-- Trust user-added CA certificates (for debugging) -->
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
    <!-- Base config for all other connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>