{
  "cli": {
    "version": ">= 3.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NODE_ENV": "development"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "env": {
          "ENVIRONMENT": "development"
        }
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true,
        "enterpriseProvisioning": "universal",
        "env": {
          "ENVIRONMENT": "development"
        }
      },
      "channel": "development"
    },
    "preview": {
      "distribution": "internal", 
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "ENVIRONMENT": "staging"
        }
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false,
        "enterpriseProvisioning": "universal",
        "env": {
          "ENVIRONMENT": "staging"
        }
      },
      "channel": "staging"
    },
    "simulator": {
      "extends": "development",
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "testflight": {
      "extends": "production",
      "distribution": "internal",
      "ios": {
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber",
        "simulator": false,
        "env": {
          "ENVIRONMENT": "staging"
        }
      },
      "channel": "testflight"
    },
    "production": {
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "env": {
          "ENVIRONMENT": "production"
        }
      },
      "ios": {
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber",
        "simulator": false,
        "env": {
          "ENVIRONMENT": "production"
        }
      },
      "channel": "production"
    },
    "production-android": {
      "extends": "production",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "env": {
          "ENVIRONMENT": "production"
        }
      }
    },
    "production-ios": {
      "extends": "production", 
      "ios": {
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber",
        "simulator": false,
        "env": {
          "ENVIRONMENT": "production"
        }
      }
    }
  },
  "submit": {
    "preview": {
      "android": {
        "serviceAccountKeyPath": "./android/service-account-key.json",
        "track": "internal",
        "releaseStatus": "draft"
      },
      "ios": {
        "ascApiKeyPath": "./ios/AuthKey.p8",
        "ascApiKeyId": "${ASC_API_KEY_ID}",
        "ascApiKeyIssuerId": "${ASC_API_KEY_ISSUER_ID}",
        "appleId": "${APPLE_ID}", 
        "ascAppId": "${ASC_APP_ID}"
      }
    },
    "production": {
      "android": {
        "serviceAccountKeyPath": "./android/service-account-key.json",
        "track": "production",
        "releaseStatus": "draft"
      },
      "ios": {
        "ascApiKeyPath": "./ios/AuthKey.p8",
        "ascApiKeyId": "${ASC_API_KEY_ID}",
        "ascApiKeyIssuerId": "${ASC_API_KEY_ISSUER_ID}",
        "appleId": "${APPLE_ID}",
        "ascAppId": "${ASC_APP_ID}"
      }
    },
    "testflight": {
      "ios": {
        "ascApiKeyPath": "./ios/AuthKey.p8",
        "ascApiKeyId": "${ASC_API_KEY_ID}",
        "ascApiKeyIssuerId": "${ASC_API_KEY_ISSUER_ID}",
        "appleId": "${APPLE_ID}",
        "ascAppId": "${ASC_APP_ID}"
      }
    }
  }
}